<div class="min-h-screen bg-gradient-to-r from-green-400 to-blue-500 flex items-center justify-center p-6">
  <div class="w-full max-w-md bg-white bg-opacity-90 shadow-lg rounded-lg p-8 backdrop-blur-md">
    <h1 class="text-4xl font-extrabold text-center text-blue-800 mb-6">🧑‍💼 Customer Details</h1>

    <div class="space-y-4">
      <p class="text-lg text-gray-700"><strong>🆔 ID:</strong> <span class="font-semibold"><%= @customer.id %></span></p>
      <p class="text-lg text-gray-700"><strong>📛 Name:</strong> 
        <span class="text-blue-600 font-semibold"><%= @customer.name %></span>
      </p>
      <p class="text-lg text-gray-700"><strong>📧 Email:</strong> <span class="text-green-600 font-semibold"><%= @customer.email %></span></p>
      <p class="text-lg text-gray-700"><strong>📞 Phone:</strong> <span class="font-semibold"><%= @customer.phone %></span></p>
      <p><strong>📅 Joined:</strong> <%= @customer.created_at.strftime("%B %d, %Y") %></p>

    </div>

    <!-- Back Button -->
    <div class="mt-8 text-center">
      <%= link_to '🔙 Back to Customers', customers_path, class: "px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg shadow-md transition duration-300 hover:bg-blue-700 transform hover:scale-105" %>
    </div>
  </div>
</div>
