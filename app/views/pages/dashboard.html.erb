<div class="bg-gray-100">
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Dashboard</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="bg-blue-500 text-white p-6 rounded-lg shadow-md">
                <h2 class="text-2xl font-semibold">Customers</h2>
                <p class="text-4xl font-bold mt-2"><%= @customers_count %></p>
            </div>
            
            <div class="bg-green-500 text-white p-6 rounded-lg shadow-md">
                <h2 class="text-2xl font-semibold">Companies</h2>
                <p class="text-4xl font-bold mt-2"><%= @companies_count %></p>
            </div>
            
            <div class="bg-red-500 text-white p-6 rounded-lg shadow-md">
                <h2 class="text-2xl font-semibold">Old Cars</h2>
                <p class="text-4xl font-bold mt-2"><%= @old_cars_count %></p>
            </div>
            
            <div class="bg-yellow-500 text-white p-6 rounded-lg shadow-md">
                <h2 class="text-2xl font-semibold">Sales</h2>
                <p class="text-4xl font-bold mt-2"><%= @sales_count %></p>
            </div>
        </div>

        <div class="mt-8 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <a href="/customers" class="bg-gray-200 p-4 text-center rounded-lg shadow hover:bg-gray-300">View Customers</a>
            <a href="/companies" class="bg-gray-200 p-4 text-center rounded-lg shadow hover:bg-gray-300">View Companies</a>
            <a href="/old_cars" class="bg-gray-200 p-4 text-center rounded-lg shadow hover:bg-gray-300">View Old Cars</a>
            <a href="/sales" class="bg-gray-200 p-4 text-center rounded-lg shadow hover:bg-gray-300">View Sales</a>
        </div>
    </div>
</div>